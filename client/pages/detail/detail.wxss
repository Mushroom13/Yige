/* pages/detail/detail.wxss */

.content-img {
  display: flex;
  justify-content: center;
  margin-top: 30px;
  margin-bottom: 30px;
}

.content-text {
  display: flex;
  justify-content: center;
  font-size: 17px;
  color: gray;
  margin-top: 20px;
  padding-bottom: 5px;
  border-bottom: 4px solid #ddd;
  /* margin-left: 50px;  */
}
.content-text text{
  position: absolute;
  display: flex;
  justify-content: center;
}

.like {
  position: relative;
  display: flex;
  justify-content: center;
  font-size: 17px;
  color: gray;
  margin-top: 15px;
  /* margin-left: 50px; */
  padding-bottom: 30px;
  border-bottom: 4px solid #ddd;
}

.like text {
  position: absolute;
  display: flex;
  justify-content: center;
}

.star {
  position: relative;
  display: flex;
  margin-left: -60px;
}

.star-image {
  position: relative;
  /* top: 50rpx; */
  width: 50rpx;
  height: 50rpx;
  src: "../../images/normal.png";
  padding-top: 15px;
  padding-bottom: 15px;
}

.item {
  position: absolute;
  top: 50rpx;
  width: 50rpx;
  height: 80rpx;
}

.text-header {
  display: flex;
  justify-content: center;
  font-size: 17px;
  color: gray;
  margin-top: 15px;
  padding-bottom: 10px;
}

.slide-image {
  width: 80%;
  padding-left: 10%;
  padding-right: 10%;
}

.show-btn {
  margin-top: 100rpx;
   color: black; 
   background-color: white; 
  font-size: 16px;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
  margin-top: 10px;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.grid {
  display: -webkit-box;
  display: box;
}

.col-0 {
  -webkit-box-flex: 0;
  /* box-flex: 0; */
}

.col-1 {
  -webkit-box-flex: 1;
  /* box-flex: 1; */
}

.input_base {
  border: 2rpx solid #ccc;
  padding-left: 10rpx;
  margin-right: 50rpx;
}

.input_h30 {
  height: 30px;
  line-height: 30px;
}

.top {
  padding-top: 8px;
}

.title {
  height: 30px;
  line-height: 30px;
  width: 160rpx;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/30px "microsoft yahei";
}
