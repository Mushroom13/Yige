.content {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item {
  height: 200px;
  width: 90%;
  margin: 5%;
  position: relative;
}
.content-item2{
  height: 100px;
  width: 90%;
  margin: 5%;
  position: relative;
}
.content-item image {
  width: 100%;
  height: 100%;
}

.content-item-text {
  position: absolute;
  bottom: 0px;
  color: gray;
  font-size: 18px;
  display: flex;
  padding-left: 32%;
  /* justify-content: center;  */
}

.selection {
  border: 2px solid #ddd;
  margin: 18px;
  margin-top: 20px;
}
.btn-area{
  padding-top: 15px;
  width: 94%;
  padding-left: 3%;
}
.buttontext{
  font-size: 18px;
