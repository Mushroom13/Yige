<view class="selection">  
  <view class="header">
    <text class="text-header">上传最美搭配</text>
  </view>
  <view class="content">
    <view class="content-item" bindtap="doUpload">
      <image src="{{OriimgUrl}}" />
    </view>

    <view wx:if="{{imgUrl}}">
      <image class="newimg" src="{{imgUrl}}" mode="aspectFit" bindtap="previewImg"></image>
      <view wx:if="{{!upsuccess}}" class="buttoncontent">
        <view class="btn-area">
          <button  open-type="share" class="buttontext" >分享</button>
        </view>
        <view class="btn-area">
          <button class="buttontext" bindtap="bindButtonTap_cancle">取消</button>
        </view>
      </view>
    </view>
  </view>
</view>