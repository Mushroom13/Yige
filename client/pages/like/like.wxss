
.list-item {
  height: 150px;
  width: 45%;
  margin: 5px;
  position: relative;
  padding-bottom: 50px;
  border: 2px solid #ddd;
}
.list-item-image{
  width: 100%;
  height: 100%;
}
.list-item text {
  font-size: 14px;
  color: #888;
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 1%;
  padding-right: 1%;
  padding-bottom: 1%;
}

.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:flex-start;
  padding-left: 3%;
}

