/* pages/mymatch/mymatch.wxss */
.header {
 border-bottom: 1px solid #ddd;
  height: 30px;
  margin-top: 15px;
  margin: 20px;
}

.text-header {
  display: flex;
  align-items: center;
  padding-left: 5%;
  color: gray;
  font-size: 16px;
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: #cd3b3b;
}
.addimg{
  display: flex;
  justify-content: center;
}
.addtext{
  display: flex;
  align-items: center;
  justify-content: center;
  color:gray;
  font-size: 13px;
  padding-bottom: 10px;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}

.nav_right {
  /*右侧盒子使用了绝对定位*/
  position: relative;
  right: 0;
  flex: 1;
  width: 100%;
   /* height: 100%;   */
  padding: 10px;
  box-sizing: border-box;
  background: #fff;
  /* margin-top: 50px; */
}

/*右侧栏list的item*/

.nav_right .nav_right_items {
  /*浮动向左*/
  float: left;
  width: 46%;
  height: 150px;
  text-align: center;
  margin: 2%;
}

.nav_right .nav_right_items image {
  /*被图片设置宽高*/
  width: 100px;
  height: 100px;
  margin-top: 15px;
}

.nav_right .nav_right_items text {
  /*给text设成块级元素*/
  display: block;
  margin-top: 15px;
  font-size: 14px;
  color: black;
  /*设置文字溢出部分为...*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}