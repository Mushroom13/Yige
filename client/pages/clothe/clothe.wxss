.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
page{
    background-color: #FFFFFF;
}
image{
    margin: 4px 0;
}
.content-img{
  display: flex;
  justify-content: center;
  margin-top: 30px;
}
.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 90%;
}
.mini-btn{
    margin-right: 5px;
}
.star {
  position: relative;
  display: flex;
 
}

.star-image {
  position: relative;

  width: 50rpx;
  height: 50rpx;
  src: "../../images/normal.png";
  padding-top: 1px;
  padding-bottom: 1px;
}

.item {
  position: absolute;
  top: 50rpx;
  width: 50rpx;
  height: 80rpx;
}