/* pages/index/me.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #a22424;
  padding-bottom: 30px;
}

.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
.userinfo-nickname {
  color: #ddd;
}

.usermotto {
  margin-top: 200px;
}

.selection {
  border-bottom: 1px solid #ddd;
  height: 30px;
  margin-top: 15px;
  margin: 20px;
}

.mytext {
  display: flex;
  align-items: center;
  padding-left: 5%;
  color: gray;
  font-size: 16px;
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: #cd3b3b;
}

.content {
  margin-top: 50px;
}
