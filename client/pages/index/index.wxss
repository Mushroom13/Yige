/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.header {
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: #cd3b3b;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 2%;
  margin-bottom: 5px;
  margin-top: 5px;
   border-bottom: 1px solid #ddd;
}

.text-all {
  color: #cd3b3b;
  font-size: 13px;
  padding-right: 15px;
}

.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item {
  height: 100px;
  width: 40%;
  margin: 4px;
  position: relative;
}

.content-item image {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;
}

.selection {
  border-bottom: 5px solid #ddd;
}

.head {
  margin-bottom: 15px;
}

.text-header {
  font-size: 18px;
  color: grey;
}
