/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.header {
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: #cd3b3b;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 2%;
  margin-bottom: 15px;
  margin-top: 5px;
  padding-bottom: 5px;
  border-bottom: 1px solid #ddd;
}

.text-all {
  color: #cd3b3b;
  font-size: 13px;
  padding-right: 15px;
}

.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  margin: 5px;
}

.content-item {
  height: 80px;
  width: 30%;
  margin: 4px;
  position: relative;
}

.weathercontent {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}

.weather image {
  height: 100%;
  width: 100%;
}

.weather {
  height: 190px;
  width: 100%;
  position: relative;
}

.weathertext {
  display: flex;
  justify-content: center;
  font-size: 18px;
  color: grey;
  margin-bottom: 10px;
  margin-top: 10px;
}

.text {
  display: flex;
  justify-content: center;
  color: gray;
  font-size: 15px;
   margin-bottom: 5px; 
}

.content-item image {
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 60%;
  padding-left: 20%;
  padding-right: 20%;
}

.swiperpart {
  height: 250px;
}

.selection {
  border-bottom: 5px solid #ddd;
}

.head {
  margin-bottom: 15px;
}

.text-header {
 padding-left: 5px;
  color: gray;
  font-size: 16px;
}
.btn{
  background-color: #7f2121;
  width: 180px;
  color:  #fff;
  font-size: 18px;
}